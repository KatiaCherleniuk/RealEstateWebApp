<EditForm EditContext="editContext" OnSubmit="Save">
    <DataAnnotationsValidator /> <!-- Required for validation -->
    <div class="mb-3">
        <label for="PhoneNumber" class="form-label">@Localizer["PhoneNumber"]</label>
        <InputText @bind-Value=model.PhoneNumber class="form-control" /> <!-- Input validation component -->
        <ValidationMessage For="() => model.PhoneNumber" /> <!-- Display validation messages for this property -->
    </div>
    <div class="mb-3">
        <label for="Comment" class="form-label">@Localizer["Comment"]</label>
        <InputTextArea @bind-Value=model.Comment class="form-control" />
        <ValidationMessage For="() => model.Comment" />
    </div>
    <div class="d-flex justify-content-center mt-4">
        <button class="btn btn-primary me-3" type="button" @onclick:preventDefault @onclick="Save">
            @Localizer["Send"]
        </button>
        <button class="btn btn-outline-primary" @onclick="Cancel">
            @Localizer["Cancel"]
        </button>
    </div> 
</EditForm>
